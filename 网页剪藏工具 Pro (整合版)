            // ç»‘å®šèƒŒæ™¯ç‚¹å‡»äº‹ä»¶
            panel.addEventListener('click', (e) => {
                if (e.target === panel) {
                    this.hide();
                }
            });
            // è‡ªåŠ¨èšç„¦æ ‡é¢˜è¾“å…¥æ¡†
            setTimeout(() => {
                titleInput.focus();
